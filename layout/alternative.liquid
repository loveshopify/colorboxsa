<!doctype html>
<html
  class="
    no-js
    loading
  "
>
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>
    {{ page_title }}

    {% if current_tags %}
      &#8211; {{ current_tags | join: ', ' }}
    {% endif %}

    {% if current_page != 1 %}
      &#8211; {{ 'general.pagination.page' | t: page_number: current_page }}
    {% endif %}

    {% unless page_title contains shop.name %}
      &#8211; {{ shop.name }}
    {% endunless %}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}" />
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  {{ content_for_header }}

 <!--  {% assign twitter_handle = settings.social-twitter-link | split: 'twitter.com/' | last %}

  {%
    include 'social-meta-tags',
    twitter_handle: twitter_handle
  %} -->
  {% include 'social-meta' %}

  <!-- Theme CSS -->
    {{ 'icons.css' | asset_url | stylesheet_tag }}

  {{ 'theme.scss.css' | asset_url | stylesheet_tag }}

  <!-- Third Party JS Libraries -->
  {{ 'modernizr-2.8.2.min.js' | asset_url | script_tag }}

  <!-- Theme object -->
  {% include 'theme-options' %}
