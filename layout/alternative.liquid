<body class="template-index alternate-index-layout loading">

  <!-- {%- section 'home-masonry-alternative' -%}

  {%- if settings.alternative-masonry-layout == false -%}
    {{ content_for_layout }}
  {%- endif -%} -->
   {% if template == 'index' and settings.masonry-features %}     {%- if settings.alternative-masonry-layout == false -%}
      {% include 'masonry-features-alt' %}        {{ content_for_layout }}
    {% else %}      {%- endif -%}
      
      <div class="main-content">    
        {{ content_for_layout }}    
      </div>    
    {% endif %}

  <!-- Scripts -->
  {{ 'jquery-3.3.1.min.js' | asset_url | script_tag }}
  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}

  {% if template contains 'cart' %}

    {% if settings.shipping-calculator %}
      {{ "/services/javascripts/countries.js" | script_tag }}
      {{ "shopify_common.js" | shopify_asset_url | script_tag }}
    {% endif %}

    {{ 'jquery.cart.min.js' | asset_url | script_tag }}
  {% endif %}

  {% if template contains 'customers' %}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
    {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}

  {% if settings.enable_currency_converter %}
    {{ '//cdn.shopify.com/s/javascripts/currencies.js' | script_tag }}
  {% endif %}

  {{ 'option_selection.js' | shopify_asset_url | script_tag }}

  {{ 'plugins.js'  | asset_url | script_tag }}
  {{ 'theme.js'  | asset_url | script_tag }}
  {{ 'grid.js'  | asset_url | script_tag }}

</body>
</html>
